{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Chrome against localhost",
          "type": "pwa-chrome",
          "request": "launch",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceFolder}/src",
          "sourceMaps": true,
          "breakOnLoad": true,
          "skipFiles": ["node_modules/**/*.js"]
      }
  ]
}